<div>
  <div class="flex mb-4">
    <%= image_tag(organization.avatar_url, alt: "#{organization.name} Avatar", class: "w-24 h-24 rounded-xl") %>

    <div class="ml-6 flex flex-col justify-center">
      <h1 class="text-2xl font-semibold"><%= organization.name %></h1>
      <p class="text-gray-600"><%= organization.description %></p>
      <a href="<%= organization.github_url %>" class="hover:underline flex items-center gap-x-2" target="_blank" rel="noopener noreferrer">
        Visit GitHub
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
        </svg>
      </a>
    </div>
  </div>
</div>
