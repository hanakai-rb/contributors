<%= render "organizations/breadcrumbs", organization: organization, org: org %>

<div>
  <div class="flex mb-4">
    <%= image_tag(organization.avatar_url, alt: "#{organization.name} Avatar", class: "w-24 h-24 rounded-xl") %>

    <div class="ml-6 flex flex-col justify-center">
      <h1 class="text-2xl font-semibold"><%= organization.name %></h1>
      <p class="text-gray-600"><%= organization.description %></p>
    </div>
  </div>
</div>

<h2>Projects</h2>

<% if projects.empty? %>
  <p class="text-gray-600">No tracked projects found for this organization.</p>
<% else %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% projects.each do |project| %>
      <div class="border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
        <h3 class="text-xl font-semibold mb-2"><%= project.name %></h3>
        <p class="text-gray-600 mb-4"><%= project.description %></p>
        <p>
          <a href="<%= project.github_url %>" class="hover:underline flex items-center gap-x-2" target="_blank" rel="noopener noreferrer">
            Visit GitHub
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
          </a>
        </p>
      </div>
    <% end %>
  </div>
<% end %>
