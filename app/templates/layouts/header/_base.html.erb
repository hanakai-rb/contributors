<header class="bg-primary border-b b-primary text-primary-reversed">
  <div class="container mx-auto flex items-center justify-between p-4">
    <div class="flex items-center space-x-8">
      <span class="text-3xl font-semibold">
        <% if org && org != "all" && org != "hanakai" && request.path != routes.path(:root) %>
          <% root_path = routes.path(:organization, org: org) %>
        <% else %>
          <% root_path = routes.path(:root) %>
        <% end %>

        <%= link_to root_path do %>
          <%= organization_to_title(org) %>
        <% end %>
      </span>

      <nav>
        <ul class="flex space-x-4">
          <% if org && org != "all" %>
            <li><a href="/" class="text-primary-reversed hover:underline"><- Back</a></li>
          <% else %>
            <li><a href="/" class="text-primary-reversed hover:underline">How to Contribute</a></li>
            <li><a href="/contributors" class="text-primary-reversed hover:underline">Contributions</a></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
